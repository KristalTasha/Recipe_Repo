<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="../styles/home.css" />
    <link rel="stylesheet" href="../styles/allrecipes.css" />
    <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css"
        integrity="sha384-AYmEC3Yw5cVb3ZcuHtOA93w35dYTsvhLPVnYs9eStHfGJvOvKxVfELGroGkvsg+p" crossorigin="anonymous" />
    <title>Recipe</title>
</head>

<body class="allrec-body">


    <header>
        <nav class="navbar">
            <div class="navsection">
                <div class="logoback">
                    <p class="logo">Tasha's Recipes</p>
                </div>

                <ul class="navlist">
                    <a class="navitem" href="/">Home</a>
                    <a class="navitem" href="/about">About us</a>
                    <a class="navitem" href="/contact">Contact us</a>
                   
                </ul>
            </div>

            <%- include("./partials/nav.ejs") %>

            <div class="search">
                <input class="searchfield" id="searchfield" type="text"
                    placeholder="Search by recipe or name">
                <button class="srch" id="srch" onclick="goSearch()"> <i class="fa fa-search"></i></button>
            </div>
        </nav>
    </header>

    <div class="page">

        
        <div class="allrecs-cont">
            <p class="toptext">All Recipes</p>

            <div class="all-recipe-grid">
                <% if(allrec.length > 0){ %>
                <% allrec.forEach(card => { %>

                <div class="top-recipe-card">
                    <img class="card-img" src="/uploads/<%=card.recipe_img%>">
                    <div class="card-label">
                        <a href="/recipe/<%=card._id%>">
                            <p class="food"><%=card.recipe_name%></p>
                        </a>
                        <a href="/profile/<%=card._id%>">
                            <p class="card-chef"><%=card.full_name%></p>
                        </a>
                    </div>
                </div>

                <% }) %>
                <% } else { %>
                <p><%= "No cards to display currently" %> </p>
                <% } %>

            </div>

        </div>


    </div>

    <%- include("./partials/footer.ejs") %>


    <script src="../logic/search.js"></script>

</body>

</html>